{
  "Qworum message scaffold": {
    "prefix": ["<", "script"],
    "body": [
      "<sequence xmlns='https://qworum.net/ns/v1/instruction/' xmlns:data='https://qworum.net/ns/v1/data/'>",
      "\t$1",
      "</sequence>\n"
    ],
    "description": "Root of Qworum script."
  },

  "<sequence>": {
    "prefix": ["<sequence>"],
    "body": [
      "<sequence>",
      "\t$1",
      "</sequence>"
    ],
    "description": "Sequence of statements."
  },

  "<call> with arguments": {
    "prefix": ["<call>"],
    "body": [
      "<call object='[${1:\"@\"}]' href='$2'>",
      "\t$3",
      "</call>"
    ],
    "description": "First call phase."
  },

  "<call> without arguments": {
    "prefix": ["<call>"],
    "body": [
      "<call object='[${1:\"@\"}]' href='$2' />"
    ],
    "description": "First call phase."
  },

  "<goto> with arguments": {
    "prefix": ["<goto>"],
    "body": [
      "<goto href='$1'>",
      "\t$2",
      "</goto>"
    ],
    "description": "Next call phase."
  },

  "<goto> without arguments": {
    "prefix": ["<goto>"],
    "body": [
      "<goto href='$1' />"
    ],
    "description": "Next call phase."
  },

  "<data-args>": {
    "prefix": ["<data-args>"],
    "body": [
      "<data-args>",
      "\t<data-arg name='$1'>",
      "\t\t$2",
      "\t</data-arg>$3",
      "</data-args>"
    ],
    "description": "Data arguments for phase."
  },

  "<data-arg>": {
    "prefix": ["<data-arg>"],
    "body": [
      "<data-arg name='$1'>",
      "\t$2",
      "</data-arg>"
    ],
    "description": "Data argument for phase."
  },

  "<object-args>": {
    "prefix": ["<object-args>"],
    "body": [
      "<object-args>",
      "\t<object-arg name='$1' object='[${2:\"@\"}]' />$3",
      "</object-args>"
    ],
    "description": "Object arguments for phase."
  },

  "<object-arg>": {
    "prefix": ["<object-arg>"],
    "body": [
      "<object-arg name='$1' object='[${2:\"@\"}]' />"
    ],
    "description": "Object argument for phase."
  },

  "<fault>": {
    "prefix": ["<fault>"],
    "body": [
      "<fault type='${1:* }' />"
    ],
    "description": "Fault."
  },

  "<try>": {
    "prefix": ["<try>"],
    "body": [
      "<try>",
      "\t$1",
      "\t<catch faults='[\"${2}\"]'>",
      "\t\t$3",
      "\t</catch>",
      "</try>"
    ],
    "description": "Handle faults."
  },

  "<catch>": {
    "prefix": ["<catch>"],
    "body": [
      "<catch faults='[\"${1}\"]'>",
      "\t$2",
      "</catch>"
    ],
    "description": "Catch faults."
  },

  "<return>": {
    "prefix": ["<return>"],
    "body": [
      "<return>",
      "\t$1",
      "</return>"
    ],
    "description": "Return a value."
  },

  "<data> write": {
    "prefix": ["<data>"],
    "body": [
      "<data name='$1'>",
      "\t$2",
      "</data>"
    ],
    "description": "Write data."
  },

  "<data> read": {
    "prefix": ["<data>"],
    "body": [
      "<data name='$1' />"
    ],
    "description": "Read data."
  },

  "<data:json>": {
    "prefix": ["<json>"],
    "body": [
      "<data:json>",
      "\t{",
      "\t\t\"${1:name}\": ${2:\"value\"}",
      "\t}",
      "</data:json>"
    ],
    "description": "JSON value."
  },

  "<data:semantic>": {
    "prefix": ["<semantic>"],
    "body": [
      "<data:semantic>",
      "\t{",
      "\t\t\"@context\" : ${1:\"https://schema.org\"},",
      "\t\t\"@type\"    : \"${2:Person}\",",
      "\t\t\"@id\"      : \"${3:https://www.wikidata.org/wiki/Q92760}\",",
      "\t\t\"${4:givenName}\": ${5:\"Claude\"}",
      "\t}",
      "</data:semantic>"
    ],
    "description": "JSON-LD value."
  }

}
